<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/classification_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@mipmap/home_nav_btn_menu_n"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="12dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="@string/information"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/classification_image"
        app:layout_constraintBottom_toBottomOf="@id/classification_image"/>
    <ImageView
        android:id="@+id/search_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@mipmap/common_nav_btn_search_n"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginRight="12dp" />
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:elevation="2dp"
        android:background="@color/homeColor"
        app:layout_constraintTop_toBottomOf="@id/classification_image"
        android:layout_marginTop="14dp"/>
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false">
            <com.stx.xhb.xbanner.XBanner
                android:id="@+id/banner"
                android:layout_width="284dp"
                android:layout_height="137dp"
                app:isClipChildrenMode="true"
                app:AutoPlayTime="2000"
                app:clipChildrenLeftRightMargin="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"/>
            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:elevation="2dp"
                android:background="@color/homeColor"
                app:layout_constraintTop_toBottomOf="@id/banner"
                android:layout_marginTop="20dp"/>
            <com.jcodecraeer.xrecyclerview.XRecyclerView
                android:id="@+id/info_recyclerview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                app:layout_constraintTop_toBottomOf="@id/view1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>