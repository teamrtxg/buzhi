<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout android:id="@+id/v4_drawerlayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--主界面-->
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/activity_home_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/activity_home_line_text"></FrameLayout>
    <TextView
        android:id="@+id/activity_home_line_text"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#f0f0f0"
        android:layout_above="@id/activity_home_ll" />
    <LinearLayout
        android:id="@+id/activity_home_ll"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:id="@+id/activity_linear_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="10dp">
            <ImageView
                android:id="@+id/activity_img_information"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/common_tab_informatiion_s"/>

            <TextView
                android:id="@+id/activity_text_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/text_information_name"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/homeColorThree"
                android:layout_marginTop="6dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/activity_linear_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/activity_img_message"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/common_tab_message_n"/>

            <TextView
                android:id="@+id/activity_text_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/text_message_name"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/homeColorThree"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/activity_linear_community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="10dp"
            >
            <ImageView
                android:id="@+id/activity_img_community"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/common_tab_community_n"/>
            <TextView
                android:id="@+id/activity_text_community"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/text_community_name"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/homeColorThree"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
    <!--侧滑界面-->
    <FrameLayout
        android:id="@+id/drawerlayout_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:choiceMode="singleChoice"
        android:background="@android:color/white" />
</android.support.v4.widget.DrawerLayout>