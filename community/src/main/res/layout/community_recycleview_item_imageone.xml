<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/community_head_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="12dp"
        android:background="@mipmap/common_icon_weixin_n"
        />
    <TextView
        android:id="@+id/community_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/community_head_icon"
        app:layout_constraintLeft_toRightOf="@id/community_head_icon"
        android:layout_marginLeft="10dp"
        android:textSize="14sp"
        android:textColor="@color/community_nickname_color"
        android:text="nickname"
        />
    <TextView
        android:id="@+id/community_publishtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/community_nickname"
        app:layout_constraintBottom_toBottomOf="@id/community_nickname"
        app:layout_constraintLeft_toRightOf="@id/community_nickname"
        android:layout_marginLeft="20dp"
        android:textSize="10sp"
        android:textColor="@color/community_publishtime_color"
        android:text="publishtime"
        />
    <TextView
        android:id="@+id/community_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/community_nickname"
        app:layout_constraintLeft_toLeftOf="@id/community_nickname"
        android:layout_marginTop="14dp"
        android:textSize="10sp"
        android:textColor="@color/community_publishtime_color"
        android:text="signature"
        />
    <TextView
        android:id="@+id/community_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/community_head_icon"
        app:layout_constraintLeft_toLeftOf="@id/community_head_icon"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:text="content"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/community_image_one"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/community_content"
        app:layout_constraintLeft_toLeftOf="@id/community_head_icon"
        android:layout_marginTop="18dp"
        fresco:roundedCornerRadius="10dp"
        />
    <ImageView
        android:id="@+id/community_great_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toBottomOf="@id/community_image_one"
        android:layout_marginTop="24dp"
        app:layout_constraintRight_toLeftOf="@id/community_greatnum"
        android:layout_marginRight="10dp"
        android:background="@mipmap/common_icon_prise_n"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/community_greatnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="12dp"
        android:textSize="12sp"
        android:textColor="@color/community_greatenum"
        app:layout_constraintTop_toTopOf="@id/community_great_icon"
        app:layout_constraintBottom_toBottomOf="@id/community_great_icon"
        android:text="1"
        />
    <TextView
        android:id="@+id/community_commentnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/community_great_icon"
        app:layout_constraintBottom_toBottomOf="@id/community_great_icon"
        app:layout_constraintRight_toLeftOf="@id/community_great_icon"
        android:layout_marginRight="20dp"
        android:textSize="12sp"
        android:textColor="@color/community_greatenum"
        android:text="1"
        />
    <ImageView
        android:id="@+id/community_comment_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toTopOf="@+id/community_great_icon"
        app:layout_constraintBottom_toBottomOf="@+id/community_great_icon"
        app:layout_constraintRight_toLeftOf="@id/community_commentnum"
        android:layout_marginRight="10dp"
        android:background="@mipmap/common_icon_comment_n"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/community_comment_recycleview"
        android:layout_width="336dp"
        android:layout_height="125dp"
        app:layout_constraintTop_toBottomOf="@+id/community_comment_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/community_comment"
        />
</android.support.constraint.ConstraintLayout>